class Solution:
    def productExceptSelf(self, nums):
        n = len(nums)
        no_of_zeros = 0
        prod = 1

        # First pass: compute product of non-zero elements and count zeros
        for num in nums:
            if num == 0:
                no_of_zeros += 1
            else:
                prod *= num

        ans = []
        for num in nums:
            if no_of_zeros > 1:
                ans.append(0)
            elif no_of_zeros == 1:
                if num == 0:
                    ans.append(prod)
                else:
                    ans.append(0)
            else:
                ans.append(prod // num)
        return ans
